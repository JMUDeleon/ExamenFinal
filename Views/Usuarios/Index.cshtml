@model IEnumerable<FinalExamen.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula_o_Pasaporte)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Creacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula_o_Pasaporte)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Creacion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Nombre }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Nombre }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Nombre })
        </td>
    </tr>
}

</table>
