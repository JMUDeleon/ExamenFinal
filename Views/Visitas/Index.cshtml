@model IEnumerable<FinalExamen.Models.Visita>

@{
    ViewBag.Title = "Index";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Motivo_Visita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Visita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora_Entrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora_Salida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contacto_Recibio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.Apellido)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Motivo_Visita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Visita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hora_Entrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hora_Salida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contacto_Recibio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Apellido)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
